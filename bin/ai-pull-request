#!/bin/sh -e

# オプションの処理
while [[ $# -gt 0 ]]; do
  case "$1" in
    -B|--base)
      BASE=$2
      shift 2
      ;;
    -H|--head)
      HEAD=$2
      shift 2
      ;;
    *)
      echo "Invalid option: $1"
      exit 1
      ;;
  esac
done

# baseが未指定の場合はデフォルトブランチを設定
if [ -z "$BASE" ]; then
  BASE=origin/$(git remote show origin | grep 'HEAD branch' | awk '{print $NF}')
fi

# headの初期値を設定
if [ -z "$HEAD" ]; then
  HEAD=$(git rev-parse HEAD)
fi

# すでにマージ済みかどうかの判定
if git merge-base --is-ancestor $HEAD $BASE; then
  echo "$HEAD branch is already merged into ${BASE}" >&2
  exit 1
fi

# get diff
DIFF=$(git diff $BASE...$HEAD)

if [ -z "$DIFF" ]; then
  echo "No changes" >&2
  exit 1
fi

# make temp file
TEMP_FILE=$(mktemp)

echo "修正内容です" > ${TEMP_FILE}
echo "${DIFF}}" >> ${TEMP_FILE}

chatgpt-cli --context ${TEMP_FILE}

rm ${TEMP_FILE}
